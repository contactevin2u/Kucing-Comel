{
  "manifest_version": 3,
  "name": "Kucing Comel SPX Auto-Fill",
  "version": "1.0.0",
  "description": "Auto-fill Shopee Express shipment forms with order data from Kucing Comel admin dashboard",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://spx.com.my/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*",
      "https://*.kucing-comel.com/*",
      "https://kucing-comel.com/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://spx.com.my/spx-admin/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
